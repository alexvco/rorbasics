<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Imageable Type</th>
      <th>Imageable Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="image_list">
    <% @images.each do |image| %>
      <tr>
        <td><%= image.filename %></td>
        <td><%= image.imageable_type %></td>
        <td><%= image.imageable_id %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path, id: 'new_image_link', remote: true %>
