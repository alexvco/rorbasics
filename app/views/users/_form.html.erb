<%= form_with(url: user.new_record? ? users_path : user_path(user), model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <%= form.fields_for :addresses, @addresses do |f| %>
    <div class="delete_address_container">
      <a class="delete_address" href="#">delete</a>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>
  <% end %>

  <div class="add_address_link_container">
    <%= link_to "Add another address", "#", id: 'add_address', class: 'add_address_link' %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
