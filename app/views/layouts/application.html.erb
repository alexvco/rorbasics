<!DOCTYPE html>
<html>
  <head>
    <title>Rorbasics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
        <!-- example: <div id="flash_notice">You need to login before performing this action</div> -->
      <% end %>

      <% if current_visitor %>
        Logged in as <%= current_visitor.email %>
        <%= link_to 'Log out', session_path('anytihng'), method: :delete  %>
      <% else %>
        <%= link_to "Sign Up", new_visitor_path %> or
        <%= link_to "Log In", new_session_path %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
